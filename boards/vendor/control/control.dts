/dts-v1/;
#include <freq.h>
#include <atmel/samd21.dtsi>
#include <atmel/samx2xx18.dtsi>
#include "control-pinctrl.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "Toadly Control, ATSAMD21";
	compatible = "vendor,control";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &led0;
		sw1 = &user_button;
		i2c-0 = &sercom3;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&portb 30 GPIO_ACTIVE_LOW>;
			label = "User LED";
		};
	};

	buttons {
		/* inputs from sense circuits */
		compatible = "gpio-keys";
		park_brake: park_brake {
			gpios = <&porta 15 GPIO_ACTIVE_LOW>;
		};

		marker_light: marker_light {
			gpios = <&porta 15 GPIO_ACTIVE_LOW>;
		};
	};

	load_drivers {
		compatible = "power-switch";
		ld_flood_d: ld_flood_d {
			gpios = <&porta 4 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_flood_r: ld_flood_r {
			gpios = <&porta 5 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_flood_p: ld_flood_p {
			gpios = <&porta 6 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_comp_lgt_1: ld_comp_lgt_1 {
			gpios = <&portb 15 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_comp_lgt_2: ld_comp_lgt_2 {
			gpios = <&porta 12 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_comp_lgt_3: ld_comp_lgt_3 {
			gpios = <&porta 13 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_comp_lgt_4: ld_comp_lgt_4 {
			gpios = <&porta 14 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_comp_lgt_5: ld_comp_lgt_5 {
			gpios = <&porta 15 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_marker_lgt: ld_marker_lgt {
			gpios = <&porta 10 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_backup_chime: ld_backup_chime {
			gpios = <&porta 11 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_fog_lgt: ld_fog_lgt {
			gpios = <&portb 10 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_isect_d: ld_isect_d {
			gpios = <&portb 11 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_isect_p: ld_isect_p {
			gpios = <&portb 12 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_aux_1: ld_aux_1 {
			gpios = <&porta 7 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_aux_2: ld_aux_2 {
			gpios = <&porta 8 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_aux_3: ld_aux_3 {
			gpios = <&porta 9 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_aux_4: ld_aux_4 {
			gpios = <&gpioexp0 0 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_aux_5: ld_aux_5 {
			gpios = <&gpioexp0 1 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_aux_6: ld_aux_6 {
			gpios = <&gpioexp0 2 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_aux_7: ld_aux_7 {
			gpios = <&portb 13 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_aux_8: ld_aux_8 {
			gpios = <&portb 14 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_aux_9: ld_aux_9 {
			gpios = <&gpioexp0 3 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_aux_10: ld_aux_10 {
			gpios = <&gpioexp0 4 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_aux_11: ld_aux_11 {
			gpios = <&gpioexp0 5 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};

		ld_aux_12: ld_aux_12 {
			gpios = <&gpioexp0 6 (GPIO_PUSH_PULL | GPIO_ACTIVE_HIGH)>;
		};
	};
};

&cpu0 {
	clock-frequency = <DT_FREQ_M(48)>;
};

&sercom3 {
	status = "okay";
	compatible = "atmel,sam0-i2c";
	clock-frequency = <I2C_BITRATE_FAST>;
	#address-cells = <1>;
	#size-cells = <0>;

	pinctrl-0 = <&sercom3_i2c_default>;
	pinctrl-names = "default";

	gpioexp0: tca9538@70 {
		compatible = "ti,tca9538";
		reg = <0x70>;
		gpio-controller;
		#gpio-cells = <2>;
		ngpios = <8>;
	};
};

&sercom5 {
	status = "okay";
	compatible = "atmel,sam0-uart";
	rxpo = <3>;
	txpo = <2>;

	pinctrl-0 = <&sercom5_uart_default>;
	pinctrl-names = "default";
};
